@model QuarterMaster.Models.Stock

@{
    ViewBag.Title = "StockToWatchList";
}
<header>
    <style>
        .element {
            width: 350px;
            height: 100px;
            font-size: 35px;
            text-transform: uppercase;
            background-color: gold;
            background: linear-gradient(180deg, rgba(211, 211, 211, 1) 0%, rgba(192, 192, 192, 1) 41%, rgba(105, 105, 105, 1) 100%);
            font-family: Tahoma;
            color: dimgray;
            text-shadow: -2px 1px 5px #000000;
            font-weight: bolder;
            position: relative;
            border-radius: 12px;
            box-shadow: 0px 0px 1px 2px #A9A9A9, 0px 0px 1px 11px #C0C0C0, 0px 0px 1px 14px #FFFFFF, 105px 0px 81px 18px rgba(249, 253, 255, 0.00), 0px 0px 0px 16px #3F3F3F, 0px 0px 1px 16px #3F3F3F;
        }

        .margin {
            display: block;
            margin-left: auto;
            margin-right: auto;
            margin-top: 1.5em;
            font-size: 2em;
        }
    </style>
</header>


<div>
    <h2>@Html.DisplayFor(model => model.StockBasic.name)</h2>
    <h3>Are you sure you want to add this stock to your WatchList?</h3>

</div>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-actions no-color">
    <input type="submit" class="element margin"value="&#x272F Add Stock  &#x272F" />
   
</div>
    <div>
        @Html.ActionLink("Back to Stocks", "Index")
    </div>
}

