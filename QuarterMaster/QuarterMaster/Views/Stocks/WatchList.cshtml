@model IEnumerable<QuarterMaster.Models.Stock>

@{
    ViewBag.Title = "JuniorWatchList";
}
<header>
    <style>
        .element {
            width: 350px;
            height: 100px;
            font-size: 35px;
            text-transform: uppercase;
            background-color: gold;
            background: linear-gradient(180deg, rgba(211, 211, 211, 1) 0%, rgba(192, 192, 192, 1) 41%, rgba(105, 105, 105, 1) 100%);
            font-family: Tahoma;
            color: dimgray;
            text-shadow: -2px 1px 5px #000000;
            font-weight: bolder;
            position: relative;
            border-radius: 12px;
            box-shadow: 0px 0px 1px 2px #A9A9A9, 0px 0px 1px 11px #C0C0C0, 0px 0px 1px 14px #FFFFFF, 105px 0px 81px 18px rgba(249, 253, 255, 0.00), 0px 0px 0px 16px #3F3F3F, 0px 0px 1px 16px #3F3F3F;
        }

        .margin {
            display: block;
            margin-left: auto;
            margin-right: auto;
            margin-top: 1.5em;
            font-size: 2em;
        }

        .margin-left {
            display: block;
            margin-left: 1em;
            margin-top: 1.5em;
            font-size: 2em;
        }

        .margin-right {
            display: block;
            margin-left: 10em;
            margin-top: 1.5em;
            font-size: 2em;
        }
    </style>
</header>

<h2>Your Stock WatchList</h2>

<table class="table table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.StockBasic.name)
        </th>

    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.StockBasic.name)
            </td>

            <td>
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>


<div class="row">
    <div class="col-sm-4">
        <center>
            <button type="button" class="element margin">
                &#119982
                @Html.ActionLink("Stocks", "Index")
                &#119982
            </button>
        </center>
    </div>
    <div class="col-sm-4">
        <button type="button" class="element margin">
            &#119966
            @Html.ActionLink("Calendar", "CalendarIndex", "Calendar")
            &#119966
        </button>
    </div>
    <div class="col-sm-4">
    </div>

</div>

