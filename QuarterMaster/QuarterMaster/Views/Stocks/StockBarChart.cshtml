@model QuarterMaster.Models.Stock



    <html>
    <head>
        <script>
            window.onload = function () {
                CanvasJS.addColorSet("greenShades",
                    [//colorSet Array

                        "#7FFFD4",
                        "#98FB98",
                        "#6B8E23",
                        "#3CB371",
                        "#00FA9A"
                    ]);

var chart = new CanvasJS.Chart("chartContainer", {
	animationEnabled: true,
	theme: "dark2", // "light1", "dark1", "dark2"
    exportEnabled: true,
    backgroundColor: "#5F9EA0",
    colorSet: "greenShades",
  
	title: {
        text: "Company Income, Earnings, Revenue, and Profit"
      
       
	},
	data: [{
        type: "column",
        
        toolTipContent: "<b>{label}</b>: ${y}",
        showInLegend: "true",
        legendText: "{label}",
        indexLabel: "{label} - ${y}",
		dataPoints:  @Html.Raw(ViewBag.DataPoints)
	}]
});
chart.render();

}
        </script>
    </head>
    <body>
        <br />
        <br />
        <div>
            <center>
                <h2>@Html.DisplayFor(model => model.StockBasic.name)</h2>

            </center>



        </div>
      
        <br />
        <br />
        <div id="chartContainer" style="height: 370px; width: 100%; border-radius:6px;"></div>
        <br />
        @Html.ActionLink("Back to Details", "Details", new { id = Model.Id })
        <script src="https://canvasjs.com/assets/script/canvasjs.min.js"></script>
        <script src="https://canvasjs.com/assets/script/jquery-1.11.1.min.js"></script>
    </body>
</html>

