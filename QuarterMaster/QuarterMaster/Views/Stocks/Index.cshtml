@model IEnumerable<QuarterMaster.Models.Stock>
@{
    ViewBag.Title = "Large Cap Stocks";
}

<!doctype html>
<html lang="en">

<head>
    <style>

        .nav-pills .pill-1 .nav-link {
            background-color: #e3f2fd;
            color: black;
            box-shadow: 0px -10px 20px -9px #095659;
            position: relative;
            border: 2px solid aliceblue;
        }

        .nav-pills .pill-3 .nav-link {
            background-color: #e3f2fd;
            color: black;
            box-shadow: 0px -10px 20px -9px #095659;
            position: relative;
            border: 2px solid aliceblue;
        }

        .nav-pills .pill-4 .nav-link {
            background-color: #e3f2fd;
            color: black;
            box-shadow: 0px -10px 20px -9px #095659;
            position: relative;
            border: 2px solid aliceblue;
        }
    </style>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" type="text/css" href="NPAboutUs.css">
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" integrity="sha384-WskhaSGFgHYWDcbwN70/dfYBj47jz9qbsMId/iRN3ewGhXQFZCSftd1LZCfmhktB" crossorigin="anonymous">
    <title>Northpoint Community Church</title>
</head>

<body>


    <div class="container">
        <ul class="nav nav-pills justify-content-center" role="tablist">
            <li class="nav-item pill-1">
                <a class="nav-link active" data-toggle="pill" href="#incomestatement">Income Statement View</a>
            </li>
            <li class="nav-item pill-3">
                <a class="nav-link" data-toggle="pill" href="#balancesheet">Balance Sheet View</a>
            </li>
            <li class="nav-item pill-4">
                <a class="nav-link" data-toggle="pill" href="#metrics">Financial Metrics View</a>
            </li>
        </ul>

        <!-- Tab panes -->
        <div class="tab-content">
            <div id="incomestatement" class="container tab-pane active">
                <table class="table table-hover">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.StockBasic.ticker)
                        </th>
                        <th>
                            @Html.ActionLink("Name", "Index", new { sortOrder = ViewBag.NameSortParm })
                        </th>
                        <th>
                            @Html.ActionLink("Sector", "Index", new { sortOrder = ViewBag.SectorSortParm })
                        </th>
                        <th>
                            @Html.ActionLink("Net Income", "Index", new { sortOrder = ViewBag.NetIncomeSortParm })
                        </th>
                        <th>
                            @Html.ActionLink("EPS", "Index", new { sortOrder = ViewBag.EPSSortParm })
                        </th>
                        <th></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.StockBasic.ticker)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.StockBasic.name)
                                <td>
                                    @Html.DisplayFor(modelItem => item.StockBasic.sector)
                                </td>

                                <td>

                                    @Html.DisplayFor(modelItem => item.StockIncomeStatement.netincome)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.StockIncomeStatement.basiceps)
                                </td>
                                <td>
                                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |

                                </td>
                            </tr>
                        

                    }

                </table>
            </div>

            <div id="balancesheet" class="container tab-pane fade">
                <table class="table table-hover">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.StockBasic.ticker)
                        </th>
                        <th>
                            @Html.ActionLink("Name", "Index", new { sortOrder = ViewBag.NameSortParm })
                        </th>
                        <th>
                            @Html.ActionLink("Sector", "Index", new { sortOrder = ViewBag.SectorSortParm })
                        </th>
                        <th>
                            @Html.ActionLink("Retained Earnings", "Index", new { sortOrder = ViewBag.RetainedEarningsSortParm })
                        </th>
                        <th>
                            @Html.ActionLink("Total Assets", "Index", new { sortOrder = ViewBag.TotalAssetsSortParm })
                        </th>
                        <th></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.StockBasic.ticker)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.StockBasic.name)
                            <td>
                                @Html.DisplayFor(modelItem => item.StockBasic.sector)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.StockBalanceSheet.retainedearnings)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.StockBalanceSheet.totalassets)
                            </td>
                            <td>
                                @Html.ActionLink("Details", "Details", new { id = item.Id }) |

                            </td>
                        </tr>
                    }

                </table>
            </div>
            <div id="metrics" class="container tab-pane fade">

                <table class="table table-hover">
                    <table class="table table-hover">
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.StockBasic.ticker)
                            </th>
                            <th>
                                @Html.ActionLink("Name", "Index", new { sortOrder = ViewBag.NameSortParm })
                            </th>
                            <th>
                                @Html.ActionLink("Sector", "Index", new { sortOrder = ViewBag.SectorSortParm })
                            </th>
                            <th>
                                @Html.ActionLink("Profit Margin", "Index", new { sortOrder = ViewBag.ProfitMarginSortParm })
                            </th>
                            <th>
                                @Html.ActionLink("Dividend Yield", "Index", new { sortOrder = ViewBag.DividendYieldSortParm })
                            </th>
                            <th></th>
                        </tr>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.StockBasic.ticker)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.StockBasic.name)
                                <td>
                                    @Html.DisplayFor(modelItem => item.StockBasic.sector)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.StockMetrics.profitmargin)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.StockMetrics.dividendyield)
                                </td>
                                <td>
                                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |

                                </td>
                            </tr>
                        }

                    </table>
            </div>
        </div>
    </div>

    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js" integrity="sha384-smHYKdLADwkXOn1EmN1qk/HfnUcbVRZyYmZ4qpPea6sjB/pTJ0euyQp0Mk8ck+5T" crossorigin="anonymous"></script>

</body>

</html>
